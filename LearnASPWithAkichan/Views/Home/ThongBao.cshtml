@model IEnumerable<LearnASPWithAkichan.Models.ClassSession>      
@{
    ViewData["Title"] = "Đăng ký môn học";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section AddToHead{
    <link rel="stylesheet" href="~/css/index.css" type="text/css" />
}

            <div class="filter">
                <ul>
                    <li class="btn btn-outline " id="theo-ke-hoach-btn"><a asp-action="Index">Theo kế hoạch</a> </li>
                    <li class="btn btn-outline btnActive"  id="ngoai-ke-hoach-btn">Ngoài kế hoạch </li>
                </ul>
            </div>
            
            <!-- Ghi Xuất dữ liệu ở đây-->
            <div class="contentWrapper">

               
                
                @foreach (var item in Model)
                {
                   <div class="contentCard">
                    <div class="cardContent">
                      <div class="cardMainContent">
                        <p>Mã môn: @item.SubjectId</p>
                        <h5>Mã lớp học phần: @item.Id</h5>
                        <p>@item.BeginDate - @item.EndDate</p>
                      </div>
                      <div class="cardSubContent">
                        <p>Số lượng: @item.Amount</p>
                      </div>
                    </div>
                    <div class="cardImage">
                      <div class="buttonAction">
                        <a  class="btn btn-outline dangKy" asp-action="add" asp-controller="Home" asp-route-id="@item.Id" id="register-btn" disabled tabindex="-1">Đăng ký </a>
                      </div>
                    </div>
                  </div>
               
                }
            </div>


 
    <script>
        $(".menu li:nth-child(1)").addClass("active");
    </script>

    <script src="~/js/index.js"></script>