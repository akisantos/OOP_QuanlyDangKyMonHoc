@model LearnASPWithAkichan.Models.Account

@{
    ViewData["Title"] = "Đăng nhập";
    Layout = "";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Quản lý đăng ký môn học</title>
    <link rel="stylesheet" href="~/css/login.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

   
</head>
<body>
    <div class="container">
        <div class="body d-md-flex h-100 d-flex align-items-center justify-content-center formBox">
            <div class="box-1 mt-md-0 mt-5">
                <img src="https://images.unsplash.com/photo-1535083252457-6080fe29be45?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=687&q=80"
                    class="" alt="">
            </div>
            <div class=" box-2 d-flex flex-column h-100">
                <div class="mt-5">
                    <p class="mb-1 h-1">Đăng nhập</p>
                    <p class="text-muted mb-2">Dùng tài khoản sinh viên của bạn để đăng nhập.</p>
                    <div class="d-flex flex-column login-box ">
                        <form asp-controller="Accounts" asp-action="login" method="post" id="loginForm">
                            <div class="user-box">
                              <input type="text" asp-for="UserName" required="">
                              <label>Mã sinh viên</label>
                            </div>
                            <div class="user-box">
                              <input type="password" asp-for="PassWord" required="">
                              <label>Mật khẩu</label>
                            </div>
                            <a id="Submit" onclick="document.getElementById('loginForm').submit();" style="cursor: pointer">
                              <span></span>
                              <span></span>
                              <span></span>
                              <span></span>
                              Đăng nhập
                            </a>

                            @*<button type="submit" class="btn btn-primary">Đăng nhập</button>*@

                            <div class="user-box">
                                <!-- <p>Thông báo gì đó</p> -->
                                <span class="text-danger">@TempData["notification"]</span>
                            </div>
                          </form>
                    </div>
                </div>
                <div class="mt-auto">
                    <a>Quên mật khẩu?</a>
                    <p class="footer text-muted mb-0 mt-md-0 mt-4">Nếu bạn quên mật khẩu hoặc cần hỗ trợ về tài khoản, hãy liên hệ
                        <span class="p-color me-1">Phòng CNTT</span>hoặc gọi số
                        <span class="p-color ms-1">0123345697</span>
                    </p>
                </div>
            </div>
        
        </div>
    </div>

</body>