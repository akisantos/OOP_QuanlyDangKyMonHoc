@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor Accessor

@{
    var username = @Accessor.HttpContext.Session.GetString("username");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Quản lý đăng ký môn học</title>
     @if (IsSectionDefined("AddToHead"))
        {
            @RenderSection("AddToHead", required: false)
        }

    @RenderSection("AddToHeadAnotherWay", required: false)
@*    <link rel="stylesheet" href="~/LearnASPWithAkichan.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/index.css" type="text/css" />*@
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
   

   
</head>
<body>
   <div class="blackDiv"></div>
    <aside id="leftside-menu" class="leftsideMenu">
        <div class="logo">
            <a href="#" class="logoLink">Chú bé DAN</a>
        </div>
        <div class="menuShadow">
        </div>
        <ul class="menu">
           
            <li class="menu-item">
                <a  class="menu-link" asp-controller="Home" asp-action="Index" asp-area="">
                    <i class="menu-icon fa fa-pencil"></i>
                    <div>Đăng ký học phần</div>
                </a>
            </li>

            <li class="menu-item">
                <a class="menu-link" asp-controller="Home" asp-action="HocPhanDaDangKy" asp-area="">
                    <i class="menu-icon fa fa-eye"></i>
                    <div>Học phần đã đăng ký</div>
                </a>
            </li>
        </ul>
    </aside>

    <div class="container-fluid maincontentwrapper">
        <div class="row content">

            <nav class="mainContentNavbar">
                <div class="toggleLeftSideMenu">
                    <a href="javascript:void(0)" id="toggle-leftside">
                        <i class="fa fa-bars" aria-hidden="true"></i>

                    </a>
                </div>
                <div class="navbarContent">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link profile" href="javascript:void(0)">
                                <div class="profile-info">
                                    <span id="profile-name">@username</span>
                                </div>

                                <div class="avatar">
                                    <img src="https://i.kym-cdn.com/entries/icons/original/000/040/642/terrifiednootnoot.jpg" alt="avt" srcset="">
                                </div>
                            </a>

                            <div class="dropdownMenu">
                                <a class="dropdownItem" asp-controller="Home" asp-action="Login" asp-area=""> <i class="fa fa-sign-out" aria-hidden="true"></i> Đăng xuất</a>
                            </div>
                        </li>
                    </ul>
                </div>


            </nav>

                     @RenderBody()
                
            </div>
        </div>
    </div>


    


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
