<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Quản lý đăng ký môn học</title>
     @if (IsSectionDefined("AddToHead"))
        {
            @RenderSection("AddToHead", required: false)
        }

    @RenderSection("AddToHeadAnotherWay", required: false)
@*    <link rel="stylesheet" href="~/LearnASPWithAkichan.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/index.css" type="text/css" />*@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

   
</head>
<body>
    <div class="blackDiv"></div>
    <aside id="leftside-menu" class="leftsideMenu">
        <div class="logo">
            <a href="#" class="logoLink">Chú bé DAN</a>
        </div>
        <div class="menuShadow">
        </div>
        <ul class="menu">

            <li class="menu-item">
                <a asp-controller="Admin" asp-action="Index" class="menu-link">
                    <i class="menu-icon fa fa-pencil"></i>
                    <div>Quản lý kỳ đăng ký</div>
                </a>
            </li>

            <li class="menu-item ">
                <a asp-controller="Admin" asp-action="QuanLyMonHoc" class="menu-link">
                    <i class="menu-icon fa fa-book" aria-hidden="true"></i>
                    <div>Quản lý môn học</div>
                </a>
            </li>

            <li class="menu-item ">
                <a asp-controller="Admin" asp-action="QuanLyLopHocPhan" class="menu-link">
                    <i class="menu-icon fa fa-address-book" aria-hidden="true"></i>
                    <div>Quản lý lớp học phần</div>
                </a>
            </li>

  

        </ul>
    </aside>

    <div class="container-fluid maincontentwrapper">
        <div class="row content">

            <nav class="mainContentNavbar">
                <div class="toggleLeftSideMenu">
                    <a href="javascript:void(0)" id="toggle-leftside">
                        <i class="fa fa-bars" aria-hidden="true"></i>

                    </a>

                   
                </div>
                <div class="navbarContent">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link profile" href="javascript:void(0)">
                                <div class="profile-info">
                                    <span id="profile-name">Thông tin Admin</span>
                                </div>

                                <div class="avatar">
                                    <img src="https://i.pinimg.com/736x/3e/90/18/3e90181cc67d3650ad9de822e0cabd4d.jpg" alt="avt" srcset="">
                                </div>
                            </a>

                            <div class="dropdownMenu">
                                <a asp-controller="Accounts" asp-action="Index" class="dropdownItem"> <i class="fa fa-sign-out" aria-hidden="true"></i> Đăng xuất</a>
                            </div>
                        </li>
                    </ul>
                </div>


            </nav>

                     @RenderBody()
                
            </div>
        </div>
    </div>

    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
