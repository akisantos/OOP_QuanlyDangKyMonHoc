@model IEnumerable<LearnASPWithAkichan.Models.Subject>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section AddToHead{
    <link rel="stylesheet" href="~/css/index.css" type="text/css" />
}

@section AddItemToHeader{
            <li class="menu-item ">
                <a  class="menu-link" asp-controller="Home" asp-action="ThongBao" asp-area="">
                    <i class="menu-icon fa fa-info"></i>
                    <div>Thông báo</div>
                </a>
            </li>

            <li class="menu-item active">
                <a  class="menu-link" asp-controller="Subjects" asp-action="DangKy" asp-area="">
                    <i class="menu-icon fa fa-pencil"></i>
                    <div>Đăng ký học phần</div>
                </a>
            </li>

            <li class="menu-item">
                <a class="menu-link" asp-controller="Home" asp-action="Login" asp-area="">
                    <i class="menu-icon fa fa-eye"></i>
                    <div>Học phần đã đăng ký</div>
                </a>
            </li>

            <li class="menu-item">
                <a href="#" class="menu-link">
                    <i class="menu-icon fa fa-credit-card"></i>
                    <div>Thanh toán</div>
                </a>
            </li>
}

    <div class="container-fluid maincontentwrapper">
        <div class="row content">

            <nav class="mainContentNavbar">
                <div class="toggleLeftSideMenu">
                    <a href="javascript:void(0)" id="toggle-leftside">
                        <i class="fa fa-bars" aria-hidden="true"></i>

                    </a>
                </div>
                <div class="navbarContent">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link profile" href="javascript:void(0)">
                                <div class="profile-info">
                                    <span id="profile-name">Thông tin SV - Mã SV</span>
                                </div>

                                <div class="avatar">
                                    <img src="https://i.kym-cdn.com/entries/icons/original/000/040/642/terrifiednootnoot.jpg" alt="avt" srcset="">
                                </div>
                            </a>

                            <div class="dropdownMenu">
                                <a class="dropdownItem" asp-controller="Home" asp-action="Login" asp-area=""> <i class="fa fa-sign-out" aria-hidden="true"></i> Đăng xuất</a>
                            </div>
                        </li>
                    </ul>
                </div>


            </nav>

            <div class="filter">
                <ul>
                    <li class="btn btn-outline btnActive" id="theo-ke-hoach-btn">Theo kế hoạch</li>
                    <li class="btn btn-outline" id="ngoai-ke-hoach-btn">Ngoài kế hoạch</li>
                </ul>
            </div>

            <div class="contentWrapper">

                <div class="contentCard longCard">
                    <div class="cardContent">
                       <div class="cardMainContent">
                            <h2>Danh sách các môn học</h2>
                            <br>
                            <p>Thông tin của môn học</p>
                       </div>

                       <div class="cardSubContent">
                            

                       </div>
                    </div>

                    <div class="cardImage">
                        <img src="~/css/images/man-with-laptop-light.png" alt="ThongBao" srcset="">
                    </div>

                </div>      
            
            @foreach (var item in Model)
            {
                <div class="contentCard">
                    <div class="cardContent">
                      <div class="cardMainContent">
                        <p></p>
                        <h5>@Html.DisplayFor(modelItem => item.Name)</h5>
                        <p>@Html.DisplayFor(modelItem => item.Credits) tín chỉ</p>
                      </div>
                      <div class="cardSubContent">
         
                      </div>
                    </div>
                    <div class="cardImage">
                      <div class="buttonAction">    
                        <a class="btn btn-outline" > Đăng ký </a>
                      </div>
                    </div>
                </div>

            }


