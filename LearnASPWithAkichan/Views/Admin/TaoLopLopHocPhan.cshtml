@model LearnASPWithAkichan.Models.ClassSession

@{
    ViewData["Title"] = "TaoLopLopHocPhan";
    Layout = "";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng ký môn học</title>

    <!--Import packages-->
    <link rel="stylesheet" href="~/css/login.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>
<body>
    <div class="container">
        <div class="body d-md-flex h-100 d-flex align-items-center justify-content-center formBox" style="width:60vw; top:0 !important; margin-top: 0 !important;">
            <div class="box-1 mt-md-0 mt-5">
                <img src="https://images.unsplash.com/photo-1535083252457-6080fe29be45?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=687&q=80"
                    class="" alt="">
            </div>
            <div class=" box-2 d-flex flex-column h-100" style="overflow-y: auto !important; max-height: 80vh !important;">
                <div class="mt-5">
                    <p class="mb-1 h-1">Chỉnh sửa tên môn học</p>
                    <p class="text-muted mb-2"></p>
                    <div class="d-flex flex-column login-box ">
                        <form asp-controller="Admin" asp-action="create_class_session" id="formSub" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="user-box">
                                <label asp-for="Id" class="control-label"></label>
                                <br /> <br />
                                <input asp-for="Id" class="form-control" />
                                <span asp-validation-for="Id" class="text-danger"></span>
                            </div>
                            <div class="user-box">
                                <label asp-for="Amount" class="control-label"></label>
                                <br /> <br />
                                <input asp-for="Amount" class="form-control" required type="number" max="40" min="1"/>
                                <span asp-validation-for="Amount" class="text-danger"></span>
                            </div>

                            <div class="user-box" style="display:none">
                                <label asp-for="Active" class="control-label"></label>
                                <br /> <br />
                                <input asp-for="Active" class="form-control" value="true"/>
                                <span asp-validation-for="Active" class="text-danger"></span>
                            </div>
@*                            <div class="user-box">
                                <label asp-for="PointClass" class="control-label"></label>
                                <br /> <br />
                                <input asp-for="PointClass" class="form-control" />
                                <span asp-validation-for="PointClass" class="text-danger"></span>
                            </div>
                            <div class="user-box">
                                <label asp-for="PointMid" class="control-label"></label>
                                 <br /> <br />
                                <input asp-for="PointMid" class="form-control" />
                                <span asp-validation-for="PointMid" class="text-danger"></span>
                            </div>

                             <div class="user-box">
                                <label asp-for="PointEnd" class="control-label"></label>
                                <br /> <br />
                                <input asp-for="PointEnd" class="form-control" />
                                <span asp-validation-for="PointEnd" class="text-danger"></span>
                            </div>*@

                             <div class="user-box">
                                <label asp-for="BeginDate" class="control-label"></label>
                                <br /> <br />
                                <input asp-for="BeginDate" class="form-control" required type="date" />
                                <span asp-validation-for="BeginDate" class="text-danger"></span>
                            </div>

                            <div class="user-box">
                                <label asp-for="EndDate" class="control-label"></label>
                                <br /> <br />
                                <input asp-for="EndDate" class="form-control" required type="date"/>
                                <span asp-validation-for="EndDate" class="text-danger"></span>
                            </div>

                            <div class="user-box">
                                <label class="form-check-label">
                                </label>
                                                             
                                    <br /> <br />
                                <select asp-for="CommonClass">
                                        <option value ="0" selected="selected" >Lớp học phần chung</option>
                                        <option value ="1" >Lớp học phần riêng</option>
                                 </select>
                            </div>

                            <div class="user-box">
                                <label asp-for="DepartmentId" class="control-label"></label>
                                <br /> <br />
                                <select asp-for="DepartmentId" class ="form-control" asp-items="ViewBag.DepartmentId" style="min-height: 5rem"></select>


                            <div class="user-box">

                                <label asp-for="SubjectId" class="control-label"></label>
                                <br /> <br />
                                <select asp-for="SubjectId" class ="form-control" asp-items="ViewBag.SubjectId" style="min-height: 5rem"></select>
                            </div>


                            <a type="Submit" id="Submit" href="javascript:$('#formSub').submit();">
                              <span></span>
                              <span></span>
                              <span></span>
                              <span></span>
                              Tạo
                            </a>

                            <a asp-action="QuanLyMonHoc">
                                <span></span>
                                <span></span>
                                <span></span>
                                <span></span>
                                Quay lại
                              </a>

                            <div class="user-box">
   
                                <p style="color: red">@TempData["notification"]</p>
                            </div>
                          </form>
                    </div>
                </div>
                <div class="mt-auto">
                    <p class="footer text-muted mb-0 mt-md-0 mt-4">Nếu bạn quên mật khẩu hoặc cần hỗ trợ về tài khoản, hãy liên hệ
                        <span class="p-color me-1">Phòng CNTT</span>hoặc gọi số
                        <span class="p-color ms-1">0123345697</span>
                    </p>
                </div>
            </div>

        </div>
    </div>


</body>
</html>
