@model IEnumerable<LearnASPWithAkichan.Models.Subject>

@{
    ViewData["Title"] = "Quản lý môn học";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@section AddToHead{
    <link rel="stylesheet" href="~/css/index.css" type="text/css" />
}

<div class="filter">
                <ul>
                    <li class="btn btn-outline"><i class="fa fa-plus" aria-hidden="true"></i> <a asp-action="TaoMonHoc"> Tạo môn học</a></li>
                </ul>
            </div>

            <!-- Ghi Xuất dữ liệu ở đây-->
            <div class="contentWrapper">
                    <div class="contentCard longCard">
                    <div class="cardContent">
                       <div class="cardMainContent">
                            <h2> @ViewData["Title"]</h2>
                            <br>
                            <p>Nếu bạn không tìm thấy học phần nào nghĩa là chưa đến đợt đăng ký!</p>
                       </div>

                       <div class="cardSubContent">
                            

                       </div>
                    </div>

                    <div class="cardImage">
                        <img src="~/css/images/man-with-laptop-light.png" alt="ThongBao" srcset="">
                    </div>
                </div>      
                


                @foreach (var item in Model)
                    {
                    <div class="contentCard">
                        <div class="cardContent">
                                <div class="cardMainContent">
                                    <p>@Html.DisplayFor(modelItem => item.Id)</p>
                                    <h5>@Html.DisplayFor(modelItem => item.Name)</h5>
                                    <p>@Html.DisplayFor(modelItem => item.Credits)</p>
                                </div>
                                <div class="cardSubContent">
                                     <p>@Html.DisplayFor(modelItem => item.Department.Id)</p>
                                </div>
                        </div>
                        <div class="cardImage">
                          <div class="buttonAction">
                            <a class="btn btn-outline dangKy" asp-route-id="@item.Id" asp-action="ChinhSuaMonHoc"> Chỉnh sửa</a>
                          </div>
                        </div>
                  </div>

                }
}               
            </div>
        </div>
    </div>
    
    <script src="~/js/index.js"></script>
    <script>
        $(".menu li:nth-child(2)").addClass("active");
    </script>
